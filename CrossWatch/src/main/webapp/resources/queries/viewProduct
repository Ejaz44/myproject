CREATE VIEW view_product as select c.CATEGORYNAME , sc.SUBCATEGORYNAME , b.BRANDNAME , s.SUPPLIERNAME , p.PRODUCTID , p.PRODUCTNAME , p.PRODUCTDESCRIPTION , p.ADDITIONALINFO , p.PRODUCTPRICE , p.PRODUCTQUANTITY  from CATEGORY c, SUBCATEGORY sc, SUPPLIER s, BRAND b, PRODUCT p where p.CATEGORYID = c.CATEGORYID and p.SUBCATEGORYID = sc.SUBCATEGORYID  and p.SUPPLIERID = s.SUPPLIERID  and p.BRANDID =b.BRANDID ;